# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index



#student
GET     /mitarbeiter                    controllers.MitarbeiterController.getInfo()
#create
POST    /mitarbeiter                    controllers.MitarbeiterController.create()
#update
PUT     /mitarbeiter/:id                controllers.MitarbeiterController.update(id: Integer)
#delete
DELETE  /mitarbeiter/:id                controllers.MitarbeiterController.delete(id: Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
